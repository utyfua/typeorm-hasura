{
   "compilerOptions": {
      "strict": true,
      "target": "es6",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "types": [
         "node",
         "jest"
      ],
      "rootDir": "./src"
   },
   "include": [
      "./src/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "build",
      "**/*.spec.ts"
   ]
}